<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sb3xml>
<sb3>
  <!--
  all text in the sb3 node is ignored,
  so text can be used for readable inline comments

  there are four main nodes to use:
    - variables
    - assets
    - procedures
    - blocks

  there can be any number of each, in any order
  -->

  <!-- declare sprite variables -->
  <variables>
    <var symbol="stackptr"/>
    <list symbol="memory"/>
  </variables>

  <!-- declare sprite assets (assets are costumes sounds ect...) -->
  <assets>
    <asset symbol="costume" file="./example/costume.png"/>
  </assets>

  <!-- declare procedures -->
  <procedures>

    <!-- a basic procedure definition -->
    <proc symbol="_main" name="Main" warp="false">
      <goto> x: <literal value="10"/> y: <literal value="20"/> </goto> <!-- create a block -->
      <reset-timer/> <!-- create another block -->
      <if> <!-- an if statement -->
        condition: <eq><literal value="10"/><literal value="10"/></eq>
        branch:
          <branch> <!-- an execution branch -->
            <goto> x: <literal value="10"/> y: <literal value="20"/> </goto>
          </branch>
      </if>
    </proc>

  </procedures>

  <!-- top level blocks under a green flag block -->
  <blocks>
    <call symbol="_main"/>
  </blocks>
</sb3>
